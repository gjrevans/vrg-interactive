<header class="l-section l-section--primary l-section--full sticky-mc-stick-face">
	<div class="container">
		<div class="m-hero row justify-content-center">
			<div class="col-md-8">
				<h1 class="m-hero__subtitle text-darken">Design and development for the modern world.</h1>
				<%= icon("fas", "arrow-down", class: "animated bounce infinite text-darken mt-4 d-sm-none") %>
			</div>
		</div>
	</div>
</header>

<nav class="l-section l-section--primary l-section--xs l-section--primary--bordered js-fixed">
	<div class="container">
		<div class="m-navigation">
			<%= link_to image_tag("logo.svg", class: "svg m-navigation__logo"), root_path %>
			<ul class="list-inline d-none d-sm-inline">
				<li class="list-inline-item"><a href="#whatwedo" class="text-white">What We Do</a></li>
				<li class="list-inline-item"><a href="#aboutus" class="text-white">About Us</a></li>
				<li class="list-inline-item"><a href="#ourwork" class="text-white">Our Work</a></li>
				<li class="list-inline-item"><a href="#contact" class="text-white">Contact us</a></li>
			</ul>
		</div>
	</div>
</nav>

<section class="l-section l-section--white l-section--xxl" id="whatwedo">
	<div class="container">
		<div class="row text-center justify-content-center">
			<div class="col-lg-4">
				<div class="m-whatwedo__item">
					<div class="m-whatwedo__icon">
						<%= image_tag("what_we_do/branding.svg") %>
					</div>
					<h3 class="text-darken">Branding</h3>
					<p class="text-muted">Logo design, brand identity, business collateral and more.</p>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="m-whatwedo__item">
					<div class="m-whatwedo__icon">
						<%= image_tag("what_we_do/code.svg") %>
					</div>
					<h3 class="text-darken">Development</h3>
					<p class="text-muted">Website, mobile apps and beyond. We develop software that suprise and delights.</p>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="m-whatwedo__item">
					<div class="m-whatwedo__icon">
						<%= image_tag("what_we_do/video.svg") %>
					</div>
					<h3 class="text-darken">Video</h3>
					<p class="text-muted">If a picture is worth 1000 words, then video can change your world.</p>
				</div>
			</div>
		</div>
	</div>
</section>

<section class="l-section l-section--info l-section--xxl" id="aboutus">
	<div class="container">
		<div class="row text-center">
			<div class="col-md-12">
				<h2 class="text-darken mb-5">About Us</h2>
			</div>
		</div>
		<!-- Row 1 -->
		<div class="m-aboutus__item row align-items-center">
			<div class="col-md-6 order-md-12">
				<%= image_tag("about_us/collaborative.svg", class: "m-aboutus__image") %>
			</div>
			<div class="col-md-6 order-md-1">
				<h3 class="font-wight-bold">Focused & Collaborative</h3>
				<p class="text-white-muted">You asked for the goods. We deliver the great. We are committed exceeding your expectations, but not your budget.</p>
			</div>
		</div>
		<!-- Row 2 -->
		<div class="m-aboutus__item row align-items-center">
			<div class="col-md-6">
				<div class="m-auto creative-machines-background">
					<div class="creative-machines-pully-1 animated rotateCW"></div>
					<div class="creative-machines-pully-2 animated rotateCW"></div>
					<div class="bubbles">
						<div class="bubble"></div>
						<div class="bubble"></div>
						<div class="bubble"></div>
						<div class="bubble"></div>
						<div class="bubble"></div>
					</div>
				</div>
			</div>
			<div class="col-md-6">
					<h3 class="font-wight-bold">Creative Machines</h3>
					<p class="text-white-muted">We scheme and conspire together, to design and devise intriguing strategies for our clients, and ultimately for their global user base. We <span class="italic">love</span> what we do!</p>
			</div>
		</div>
		<!-- Row 3 -->
		<div class="m-aboutus__item row align-items-center">
			<div class="col-md-6 order-md-12">
				<%= image_tag("about_us/storytellers.svg", class: "m-aboutus__image") %>
			</div>
			<div class="col-md-6 order-md-1">
				<h3 class="font-wight-bold">Storytellers</h3>
				<p class="text-white-muted">Each story becomes a part of history. VRG's creations each tell a story of art borne from need, climaxing with flair and imagining.</p>
				<p class="text-white-muted">Our client accolades and user experiences spur us on to even greater and higher plains of conceptual form. Let our next story become a part of your history.</p>
			</div>
		</div>
	</div>
</section>

<section class="l-section l-section--white l-section--xxl text-center text-sm-left" id="ourwork">
	<div class="container">
		<div class="row text-center">
			<div class="col-md-12">
				<h2 class="text-darken mb-5">Our Work</h2>
			</div>
		</div>
		<div class="row py-5 collapse" id="workDetails">
			<div class="col-md-6">
				<%= image_tag("our_work/aldo", class: "img-fluid") %>
			</div>
			<div class="col-md-6">
				<h5>Hello World</h5>
				<p>Some additional text about this thing.</p>
			</div>
		</div>
		<div class="row">
			<% @our_work.each do |work| %>
				<div class="col-md-6 col-lg-4">
					<div class="m-ourwork" data-toggle="collapse" data-target="#workDetails" data-url="" role="button">
						<div class="m-ourwork__image">
							<%= image_tag(work["image"], class: "img-fluid") %>
							<div class="m-ourwork__image__body">
								<h5><%= link_to work["name"], work["url"], target: "_blank" %></h5>
								<p class="mb-0"><%= work["description"] %></p>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
		<div class="row justify-content-center mt-5 text-center">
			<div class="col-md-6">
				<h4 class="text-darken">we've done our job when you're excited about what we've built together...</h4>
			</div>
		</div>
	</div>
</section>

